<%= graph font_size: 20 %>

<%= circle 15, 
    id: :bg,
    translate: {24, 24}
%>

<%= @children %>

<%= primitive Scenic.Primitive.Rectangle, {48, 48}, id: :btn, input: [:cursor_button, :cursor_pos] %>

<%= component FloUI.Tooltip,
    @label,
    id: :tooltip,
    translate: {10, 50},
    hidden: !@showing_tooltip
%>

<%= circle 15,
    id: :circle_disabled,
    hidden: not @disabled?,
    fill: {:black, 100},
    translate: {24, 24},
    input: [:cursor_button, :cursor_pos]
%>