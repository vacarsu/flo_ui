<%= graph font_size: 20 %>

<%= primitive Scenic.Primitive.Rectangle,
    {@width + 20, @height},
    id: :bg,
    fill: if(@selected or @hovered, do: @theme.thumb, else: @theme.background),
    input: [:cursor_pos, :cursor_button]
%>

<%= primitive Scenic.Primitive.Text,
    @label,
    translate: {5, 25},
    fill: @theme.text
%>